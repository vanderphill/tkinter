def negative():  # function for button click
    global myLabel
    myLabel.destroy()
    global current
    current = (current * -1)
    print("negative")
    myLabel = Label(root, text=str(current), font=("Helvetica", 26), bg="white")
    myLabel.grid(row=0,column=2, columnspan=3)
    print(current)
