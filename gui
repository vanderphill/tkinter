def decimal():  # function for button click
    global current
    global decplace
    global answer
    global decimal
    if answer == True:
        current = 0
        answer = False
        decplace = 10
        decimal = False
    decimal = True

    print("not working yet")
def equals():  # function for button click
    global myLabel
    global answer
    answer = True
    myLabel.destroy()
    global current
    global second
    global decimal
    decimal = False
    global decplace
    decplace = 10
    if operator == "divide":
        current = second / current
    elif operator == "add":
        current = second + current
    elif operator == "times":
        current = second * current
    elif operator == "minus":
        current = second - current
    second=0
    print("equals")
    myLabel = Label(root, text=str(current), font=("Helvetica", 26), bg="white")
    myLabel.grid(row=0,column=2, columnspan=3)
    print(current)


myLabel = Label(root,text=str(current),font=("Helvetica", 26),bg="white")
myLabel.grid(row=0,column=2, columnspan=3)
clearButton = Button(root, text=" ce  ", padx=55,pady=20,bg="lightblue",command=clear)
squarebutton = Button(root,text=" sq   ", padx=20,pady=3, bg="lightblue",command=square)
squarerootButton = Button(root, text=" sqrt", padx=20,pady=3,bg="lightblue",command=squarert)
divideButton = Button(root, text="   /  ", padx=20,pady=20,bg="lightblue",command=divide)
sevenButton = Button(root, text="   7  ", padx=20,pady=20,command=seven)
eightButton = Button(root, text="   8  ", padx=20,pady=20,command=eight)
nineButton = Button(root, text="  9   ", padx=20,pady=20,command=nine)
timesButton = Button(root, text="  X   ", padx=20,pady=20,bg="lightblue",command=times)
fourButton = Button(root, text="  4   ", padx=20,pady=20,command=four)
fiveButton = Button(root, text="  5   ", padx=20,pady=20,command=five)
sixButton = Button(root, text="  6   ", padx=20,pady=20,command=six)
minusButton = Button(root, text="   -  ", padx=20,pady=20,bg="lightblue",command=minus)
oneButton = Button(root, text="  1   ", padx=20,pady=20,command=one)
twoButton = Button(root, text="  2   ", padx=20,pady=20,command=two)
threeButton = Button(root, text="  3   ", padx=20,pady=20,command=three)
addButton = Button(root, text="  +   ", padx=20,pady=20,bg="lightblue",command=plus)
negativeButton = Button(root, text="   -  ", padx=20,pady=20,bg="lightblue",command=negative)
zeroButton = Button(root, text="  0   ", padx=20,pady=20,command=zero)
decimalButton = Button(root, text="   .   ", padx=20,pady=20,bg="lightblue",command=decimal)
equalsButton = Button(root, text="  =   ", padx=20,pady=20,bg="red",command=equals)

clearButton.grid(row=1,column=0, columnspan=2, rowspan=2)
squarerootButton.grid(row=2,column=2,rowspan=1)
squarebutton.grid(row=1,column=2,rowspan=1)
divideButton.grid(row=1,column=3,rowspan=2)
sevenButton.grid(row=3,column=0)
eightButton.grid(row=3,column=1)
nineButton.grid(row=3,column=2)
timesButton.grid(row=3,column=3)
