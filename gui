from math import *
from tkinter import *
second = 0
current = 0
operator = "add"
root = Tk()


def clear():  #function for button click
    global current = 0
def squarert():  # function for button click
    global current = sqrt(current)
def divide():  # function for button click
    global second = current
    global current = 0
    global operator = "divide"
def seven():  # function for button click
    global current = ((current *10)+7)
def eight():  # function for button click
    global current = ((current * 10) + 8)
def nine():  # function for button click
    global current = ((current * 10) + 9)

def times():  # function for button click
    global second = current
    global current = 0
    global operator = "times"
def four():  # function for button click
    global current = ((current * 10) + 4)

def five():  # function for button click
    global current = ((current * 10) + 5)

def six():  # function for button click
    global current = ((current * 10) + 6)

def minus():  # function for button click
    global second = current
    global current = 0
    global operator = "minus"
def one():  # function for button click
    global current = ((current * 10) + 1)

def two():  # function for button click
    global current = ((current * 10) + 2)

def three():  # function for button click
    global current = ((current * 10) + 3)

def plus():  # function for button click
    global second = current
    global current = 0
    global operator = "add"
def negative():  # function for button click
    global current = (current * -1)
def zero():  # function for button click
    global current = ((current * 10) + 0)

def decimal():  # function for button click

def equals():  # function for button click
    if operator == "divide":
        global current = second / current
    elif operator == "add":
        global current = second + current
    elif operator == "times":
        global current = second * current
    elif operator == "minus":
        global current = second - current

myLabel = Label(root,text="0",font=("Helvetica", 26),bg="white")
myLabel.grid(row=0,column=3)
clearButton = Button(root, text=" ce  ", padx=20,pady=20,command=clear)
squarerootButton = Button(root, text="sqrt", padx=20,pady=20,command=squarert)
divideButton = Button(root, text="   /  ", padx=20,pady=20,command=divide)
sevenButton = Button(root, text="   7  ", padx=20,pady=20,command=seven)
eightButton = Button(root, text="   8  ", padx=20,pady=20,command=eight)
nineButton = Button(root, text="  9   ", padx=20,pady=20,command=nine)
timesButton = Button(root, text="  X   ", padx=20,pady=20,command=times)
fourButton = Button(root, text="  4   ", padx=20,pady=20,command=four)
fiveButton = Button(root, text="  5   ", padx=20,pady=20,command=five)
sixButton = Button(root, text="  6   ", padx=20,pady=20,command=six)
minusButton = Button(root, text="   -  ", padx=20,pady=20,command=minus)
oneButton = Button(root, text="  1   ", padx=20,pady=20,command=one)
twoButton = Button(root, text="  2   ", padx=20,pady=20,command=two)
threeButton = Button(root, text="  3   ", padx=20,pady=20,command=three)
addButton = Button(root, text="  +   ", padx=20,pady=20,command=plus)
negativeButton = Button(root, text="   -  ", padx=20,pady=20,command=negative)
zeroButton = Button(root, text="  0   ", padx=20,pady=20,command=zero)
decimalButton = Button(root, text="   .   ", padx=20,pady=20,command=decimal)
equalsButton = Button(root, text="  =   ", padx=20,pady=20,command=equals)

clearButton.grid(row=1,column=0)
squarerootButton.grid(row=1,column=2)
divideButton.grid(row=1,column=3)
sevenButton.grid(row=2,column=0)
eightButton.grid(row=2,column=1)
nineButton.grid(row=2,column=2)
timesButton.grid(row=2,column=3)
fourButton.grid(row=3,column=0)
fiveButton.grid(row=3,column=1)
sixButton.grid(row=3,column=2)
minusButton.grid(row=3,column=3)
oneButton.grid(row=4,column=0)
twoButton.grid(row=4,column=1)
threeButton.grid(row=4,column=2)
addButton.grid(row=4,column=3)
negativeButton.grid(row=5,column=0)
zeroButton.grid(row=5,column=1)
decimalButton.grid(row=5,column=2)
equalsButton.grid(row=5,column=3)

root.mainloop() #run main loop

