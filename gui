from math import *
from tkinter import *
second = 0
current = 0
operator = "add"
decimal = False
decplace = 10
answer = False
root = Tk()
root.title("Phill's Calculator")


def clear():  #function for button click
    global myLabel
    global answer
    answer = False
    myLabel.destroy()
    global current
    global decimal
    decimal = False
    global decplace
    decplace = 10
    current = 0
    print("clear")
    myLabel = Label(root, text=str(current), font=("Helvetica", 26), bg="white")
    myLabel.grid(row=0,column=2, columnspan=3)
    print(current)
def squarert():  # function for button click
    global myLabel
    myLabel.destroy()
    global current
    global decimal
    global answer
    answer = True
    decimal = False
    global decplace
    decplace = 10
    current = sqrt(current)
    print("square root")
    myLabel = Label(root, text=str(current), font=("Helvetica", 26), bg="white")
    myLabel.grid(row=0, column=2, columnspan=3)
    print(current)
def square():  # function for button click
    global myLabel
    myLabel.destroy()
    global current
    global decimal
    global answer
    answer = True
    decimal = False
    global decplace
    decplace = 10
    current = current**2
    print("square root")
    myLabel = Label(root, text=str(current), font=("Helvetica", 26), bg="white")
    myLabel.grid(row=0, column=2, columnspan=3)
    print(current)
def divide():  # function for button click
    global second
    global current
    global decimal
    decimal = False
    global decplace
    decplace = 10
    second = current
    current = 0
    global operator
    operator = "divide"
    print("divide")
def seven():  # function for button click
    global myLabel
    myLabel.destroy()
    global current
    global decplace
    global answer
    global decimal
    if answer == True:
        current = 0
        answer = False
        decplace = 10
        decimal = False
    if decimal == True:
        current = ((current * 1) + 7/decplace)

        decplace = decplace * 10
    else:
        current = ((current *10)+7)
    print("7")
    myLabel = Label(root, text=str(current), font=("Helvetica", 26), bg="white")
    myLabel.grid(row=0,column=2, columnspan=3)
    print(current)
